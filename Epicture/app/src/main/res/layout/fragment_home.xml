<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/Black3"
    android:layout_height="match_parent">

    <SearchView
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_width="324dp"
        android:layout_marginRight="8dp"
        android:layout_alignParentEnd="true" android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp" android:layout_marginStart="8dp"
        android:id="@+id/searchBar"
        android:queryHint="Search"
        android:autofillHints="Search"
        android:background="@android:color/darker_gray"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" />
    <androidx.recyclerview.widget.RecyclerView
        android:paddingBottom="50dp"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" android:layout_below="@+id/searchBar" android:layout_marginBottom="0dp"
        android:layout_marginEnd="0dp" android:layout_marginLeft="0dp" android:layout_marginRight="0dp"
        android:id="@+id/recyclerView_main"/>
</RelativeLayout>